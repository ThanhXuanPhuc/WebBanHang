@model List<Product>;

<partial name="_Notification" />

<div class="row mb-4">
    <div class="col-md-6">
        <h2>LIST PRODUCT</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-patch-plus-fill"></i> Add New
        </a>
    </div>
</div>

<div class="products">
    <partial name="ProductPartial" />
</div>
@section Scripts{ 
    <script>
        $(document).on("click", ".page-link", function (e) {
            e.preventDefault();
            let currentpage = $(this).data("page");
            $.ajax({
                url: "Product/Index",
                data: { page: currentpage },
                success: function (data) {
                    $(".products").html(data);
                }
            });
        });
    </script>
}